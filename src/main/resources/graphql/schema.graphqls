schema {
    query: Query
    mutation: Mutation
}

type Query {
    allLinks: [Link]
    link(id: ID!): Link
    linksByUrl(url: String!): [Link]
    allUsers: [User]
    user(id: ID!): User
    usersByEmail(email: String!): [User]
}

type Mutation {
    createUser(name: String!, email: String!, password: String!): User
    createUserAuth(name: String!, authData: AuthData!): User
    signinUser(auth: AuthData): SigninPayload
    createLink(url: String!, description: String!): Link
}

type Link {
    id: ID!
    url: String!
    description: String
    postedBy: User
}

type User {
    id: ID!
    name: String!
    email: String
    password: String
}

input AuthData {
    email: String!
    password: String!
}

type SigninPayload {
    token: Long
    user: User
}
